---
import { Icon } from 'astro-icon/components';
import type { HTMLAttributes } from 'astro/types';

const tags: string[] = [
  'опт',
  'весна',
  'для рыбалки',
  'влагозащитные',
  'противомоскитные',
  'подобрать костюмы',
  'выгодные предложения',
];

type Props = Pick<HTMLAttributes<'div'>, 'class'>;

const { class: className, ...rest } = Astro.props;
---

<div class:list={['question-card', className]} {...rest}>
  <div class='question-card__tags'>
    {tags.map((tag) => <div class='question-card__tag'>{tag}</div>)}
  </div>
  <p class='question-card__text'>
    Здравствуйте! Я — менеджер магазина СтайрТекс, Введите, что ищете, или задайте вопрос.
  </p>
  <div class='question-card__bottom'>
    <p class='question-card__hint'>среднее время ответа 15 секунд</p>
    <div class='question-card__input input-question-card' data-component='question-input'>
      <Icon name='stars' />
      <input type='text' placeholder='Скажите, что ищете или задайте вопроc...' class='input-question-card__input' />
    </div>
  </div>
</div>

<style lang='scss'>
  .question-card {
    background-color: var(--light);
    border-radius: 12px;
    padding: 8px;

    &__tags {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 4px;

      margin-bottom: 16px;
    }

    &__tag {
      border-radius: 6px;
      background-color: var(--white);
      padding: 4px 8px;

      font-family: var(--font-secondary);
      font-weight: 500;
      font-size: 14px;
      color: var(--secondary);
    }

    &__text {
      padding: 0 8px;

      font-family: var(--font-secondary);
      font-weight: 500;
      font-size: 14px;
      line-height: 16px;
      color: var(--secondary);

      margin-bottom: 16px;
    }

    &__bottom {
    }

    &__hint {
      text-align: right;

      font-family: var(--font-secondary);
      font-weight: 500;
      font-size: 10px;
      line-height: 16px;
      color: var(--primary);
    }

    &__input {
    }
  }

  .input-question-card {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--primary);
    background-color: var(--white);
    padding: 6px 8px;
    border-radius: 8px;

    svg {
      width: 28px;
      height: 20px;
    }

    &__input {
      width: 100%;
      font-family: var(--font-secondary);
      font-weight: 500;
      font-size: 14px;

      &::placeholder {
        color: var(--primary);
      }
    }
  }
</style>

<script>
  const inputWrapper = document.querySelector<HTMLDivElement>("[data-component='question-input']");
  const input = inputWrapper?.querySelector<HTMLInputElement>('input');

  inputWrapper?.addEventListener('click', () => {
    input?.focus();
  });
</script>
