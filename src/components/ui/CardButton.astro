---
import type { HTMLAttributes } from 'astro/types';

interface Props extends Pick<HTMLAttributes<'button'>, 'class'> {
  price: string | number;
  text: string;
  type?: 'primary' | 'secondary';
}

const { text, price, type = 'primary', class: className, ...rest } = Astro.props;
---

<button class:list={['card-button', className]} {...rest}>
  <div class:list={['card-button__inner', type]}>
    {text}
    <span>{price}</span> руб
  </div>
</button>

<style lang='scss'>
  .card-button {
    display: flex;
    justify-content: center;
    align-items: center;

    &__inner {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 4px;

      padding: 10px 4px;
      border-radius: 8px;
      @include border(1px, var(--primary));
      width: 100%;

      font-family: var(--font-primary);
      font-size: 11px;
      font-weight: 900;
      font-style: italic;
      font-size: 11px;
      text-transform: uppercase;
      color: var(--primary);

      &.primary {
        background-color: transparent;
      }

      &.secondary {
        background-color: var(--light);
        @include border(1px, var(--light));
      }

      @include media('md') {
        display: inline-flex;
        width: auto;
        padding: 6px 10px;
      }

      @include media('xl') {
        align-items: flex-end;
        padding: 10px;
      }

      span {
        line-height: 11px;
        font-size: 12px;

        @include media('md') {
          font-size: 20px;
        }

        @include media('xl') {
          font-size: 14px;
          line-height: 12px;
        }
      }
    }
  }
</style>
