---
import type { HTMLAttributes } from 'astro/types';

const pages: number[] = [1, 2, 3, 4, 5];
const currentPage = 1;

type Props = Pick<HTMLAttributes<'div'>, 'class'>;

const { class: className, ...rest } = Astro.props;
---

<div class:list={['pagination', className]} {...rest}>
  {
    pages.map((page) => (
      <button class:list={['pagination__button number', page === currentPage && 'current']}>{page}</button>
    ))
  }
  <button class='pagination__button'>Следующая</button>
</div>

<style lang='scss'>
  .pagination {
    display: flex;
    align-items: center;
    gap: 4px;

    &__button {
      font-family: var(--font-primary);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 8px;
      background-color: var(--light-2);
      border-radius: 8px;
      height: 32px;

      font-weight: 700;
      font-size: 12px;
      text-transform: uppercase;
      color: var(--secondary);

      @include media('xl') {
        font-size: 16px;
        height: 40px;
      }

      &.number {
        width: 32px;
        font-size: 16px;

        @include media('xl') {
          width: 40px;
        }
      }

      &.current {
        color: var(--primary);
      }
    }
  }
</style>
