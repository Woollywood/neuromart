---
import CustomImage from '@/components/shared/CustomImage.astro';
import type { ImageMetadata } from 'astro';

export interface ICard {
  label: string;
  image?: Promise<{ default: ImageMetadata }>;
  title: string;
}

type Props = ICard;

const { label, image, title } = Astro.props;
---

<div class='blog-archive-card'>
  <div class='blog-archive-card__header'>
    <div class='blog-archive-card__label'>
      <span>Новинка</span> / 05.01.25
    </div>
  </div>
  <div class:list={['blog-archive-card__content', { 'empty-image': !image }]}>
    <h3 class='blog-archive-card__title'>{title}</h3>
    {
      image && (
        <div class='blog-archive-card__image'>
          <CustomImage src={image} alt='image' />
        </div>
      )
    }
  </div>
</div>

<style lang='scss'>
  .blog-archive-card {
    overflow: hidden;
    border-radius: 8px;
    border: 1px solid var(--light-2);

    &__header {
      padding: 8px 0;
      margin: 0 8px;
      border-bottom: 1px solid var(--light-2);
    }

    &__label {
      text-align: center;
      font-weight: 500;
      font-size: 12px;
      line-height: 16px;
      text-transform: uppercase;
      color: var(--primary);

      span {
        font-weight: 900;
        font-style: italic;
      }
    }

    &__content {
      &.empty-image {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }
    }

    &__title {
      text-align: center;
      font-weight: 900;
      font-style: italic;
      font-size: 18px;
      line-height: 16px;
      text-transform: uppercase;
      color: var(--secondary);
      margin-bottom: 8px;

      .empty-image & {
        margin-bottom: 0;
      }
    }

    &__image {
      position: relative;
      aspect-ratio: 145 / 198;
      width: 100%;

      img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
  }
</style>
