---
interface CartFooter {
  count: string;
  totalPrice: string;
  discount: string;
  totalPriceWithDiscount: string;
}

const data: CartFooter = {
  count: '8',
  totalPrice: '1 444 128',
  discount: '288 128',
  totalPriceWithDiscount: '1 156 000',
};

const { count, totalPrice, discount, totalPriceWithDiscount } = data;
---

<div class='cart-price'>
  <div class='cart-price__items'>
    <div class='cart-price__item'>
      <div class='cart-price__item_left'>Ваш заказ:</div>
      <div class='cart-price__item_right'>{count} ТОВАРОВ</div>
    </div>
    <div class='cart-price__item'>
      <div class='cart-price__item_left'>Товары на сумму:</div>
      <div class='cart-price__item_right'>{totalPrice} <span class='cart-price__item_small'>РУБ</span></div>
    </div>
    <div class='cart-price__item'>
      <div class='cart-price__item_left'>Скидка:</div>
      <div class='cart-price__item_right'>{discount} <span class='cart-price__item_small'>РУБ</span></div>
    </div>
    <div class='cart-price__separator'></div>
    <div class='cart-price__item'>
      <div class='cart-price__item_left'>Итого:</div>
      <div class='cart-price__item_right'>{totalPriceWithDiscount} <span class='cart-price__item_small'>РУБ</span></div>
    </div>
  </div>
</div>

<style lang='scss'>
  .cart-price {
    display: none;

    @include media('md') {
      display: block;
      padding: 14px 0 10px;
    }

    @include media('lg') {
      padding: 14px 0 24px;
    }

    @include media('xl') {
      padding: 20px 0;
    }

    &__items {
      display: flex;
      flex-direction: column;
      gap: 8px;

      @include media('lg') {
        gap: 6px;
      }

      @include media('xl') {
        gap: 8px;
      }
    }

    &__item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;

      font-weight: 800;
      font-size: 13px;
      text-transform: uppercase;
      color: var(--secondary);

      @include media('lg') {
        font-size: 14px;
      }

      @include media('xl') {
        font-size: 16px;
      }

      &_left {
      }

      &_right {
      }

      &_small {
        font-size: 10px;

        @include media('lg') {
          font-size: 14px;
        }
      }
    }

    &__separator {
      margin: 4px 0;
      width: 100%;
      height: 1px;
      background-color: var(--light-2);

      @include media('xl') {
        margin: 4px 0 10px;
      }
    }
  }
</style>
