---
import Layout from '@/layouts/Layout.astro';
import Gallery from './components/Gallery.astro';
import Details from './components/Details.astro';
import Questions from './components/Questions.astro';
import SliderSection from '@/components/shared/SliderSection.astro';
---

<Layout>
  <div class='detail'>
    <div class='detail__container container'>
      <div class='detail__main'>
        <Gallery class='detail__gallery' />
        <Details />
      </div>
      <div class='detail__bottom'>
        <SliderSection title='Похожие' description='Текст комментария от нейросети для расшифровки' />
        <Questions />
        <SliderSection title='Похожие' description='Текст комментария от нейросети для расшифровки' />
        <SliderSection title='Похожие' description='Текст комментария от нейросети для расшифровки' />
      </div>
    </div>
  </div>
</Layout>

<style lang='scss'>
  .detail {
    padding-top: 8px;
    margin-bottom: 40px;

    @include media('md') {
      margin-bottom: 96px;
    }

    @include media('xl') {
      margin-bottom: 128px;
    }

    &__container {
    }

    &__main {
      @include media('lg') {
        display: grid;
        gap: 8px;
        grid-template-columns: 1fr 306px;
        margin-bottom: 80px;
      }

      @include media('xl') {
        margin-bottom: 112px;
        grid-template-columns: 6fr 2fr;
      }
    }

    &__gallery {
      margin-bottom: 8px;

      @include media('lg') {
        margin: 0;
      }
    }

    &__bottom {
      display: flex;
      flex-direction: column;
      gap: 36px;
    }
  }
  .container {
  }
</style>
