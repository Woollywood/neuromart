---
import type { HTMLAttributes } from 'astro/types';

type Props = Pick<HTMLAttributes<'button'>, 'class'>;

const { class: className, ...rest } = Astro.props;
---

<button class:list={['add-cart-button', className]} {...rest}>добавить в корзину</button>

<style lang='scss'>
  .add-cart-button {
    font-family: var(--font-primary);
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 12px;
    background-color: var(--primary);
    height: 64px;
    padding: 4px 6px;

    font-weight: 900;
    font-style: italic;
    font-size: 20px;
    text-transform: uppercase;
    color: var(--white);

    @include media('md') {
      height: 48px;
    }
  }
</style>
