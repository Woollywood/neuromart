---
import type { ImageMetadata } from 'astro';
import type { CardProp } from './Card.astro';
import Card from './Card.astro';
import type { HTMLAttributes } from 'astro/types';

type Props = Pick<HTMLAttributes<'div'>, 'class'>;

const { class: className, ...rest } = Astro.props;

const hitsImgs = import.meta.glob<{ default: ImageMetadata }>('/src/assets/img/inventory/*.{jpeg,jpg,png,gif}');

const content: CardProp = {
  image: hitsImgs['/src/assets/img/inventory/card.png'](),
  country: 'Финляндия',
  title: 'Костюм Горка Зима Финл. ПК #309',
  description: 'Морозоустойчивая, Непромокаемая, Дышащая, Морозоустойчивая, Непромокаемая, Дышащая,',
  price: '7 712',
  retail: '13 000',
};

const cardList: CardProp[] = Array.from({ length: 12 }).map(() => content);
---

{cardList.map((card) => <Card {...card} />)}
