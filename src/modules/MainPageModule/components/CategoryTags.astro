---
import type { HTMLAttributes } from 'astro/types';

interface Props extends Pick<HTMLAttributes<'div'>, 'class'> {
  tags: string[];
  aboveImage?: boolean;
}

const { tags, aboveImage = true, class: className, ...rest } = Astro.props;
---

<div class:list={['category-tags', className, aboveImage ? 'aboveImage' : 'notAboveImage']} {...rest}>
  {tags.map((tag) => <div class='category-tags__tag'>{tag}</div>)}
</div>

<style lang='scss'>
  .category-tags {
    flex-wrap: wrap;
    gap: 4px;
    justify-content: center;

    @include media('lg') {
      gap: 8px;
    }

    &.aboveImage {
      display: flex;

      @include media('lg') {
        display: none;
      }
    }

    &.notAboveImage {
      display: none;

      @include media('lg') {
        display: flex;
      }
    }

    &__tag {
      padding: 5px 8px;
      border-radius: 6px;
      @include border(1px, rgba(255, 255, 255, 0.32));
      background-color: transparent;

      font-family: var(--font-secondary);
      font-weight: 500;
      font-size: 14px;
      color: var(--white);

      @include media('md') {
        padding: 9px 8px;
      }

      @include media('lg') {
        @include border(1px, var(--light-2));
        border-radius: 8px;
        color: var(--secondary);
      }

      @include media('xl') {
        padding: 12px;
        font-size: 16px;
      }
    }
  }
</style>
