---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';
import 'swiper/css';

export interface SlideHit {
  image: Promise<{ default: ImageMetadata }>;
  country: string;
  title: string;
  description: string;
  price: string;
}

interface Props {
  title: string;
  description: string;
  slides: SlideHit[];
}

const { title, description, slides } = Astro.props;
---

<div class='hits' data-component='hits'>
  <div class='hits__container container'>
    <div class='hits__top'>
      <h2 class='hits__title'>
        {title}
      </h2>
      <p class='hits__description'>{description}</p>
    </div>
    <div class='swiper swiper-fix hits__slider'>
      <div class='swiper-wrapper hits__slider-wrapper'>
        {
          slides.map(({ image, title, price, description, country }) => (
            <div class='swiper-slide hits__slide slide-hits'>
              <div class='slide-hits__image'>
                <Picture inferSize layout='constrained' formats={['avif', 'webp']} src={image} alt='image' />
              </div>
              <div class='slide-hits__content'>
                <p class='slide-hits__country'>{country}</p>
                <h2 class='slide-hits__title'>{title}</h2>
                <p class='slide-hits__description'>{description}</p>
                <div class='slide-hits__price'>
                  опт <span>{price}</span> руб
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <div class='hits__bottom'>
      <a href='#' class='hits__catalog-button'>Смотреть каталог</a>
    </div>
  </div>
</div>

<style lang='scss'>
  .hits {
    &__container {
    }

    &__top {
      margin-bottom: 8px;
    }

    &__title {
      font-weight: 800;
      font-size: 18px;
      text-transform: uppercase;
      color: var(--secondary);
    }

    &__description {
      font-family: var(--font-secondary);
      font-weight: 500;
      font-size: 13px;
      line-height: 16px;
      color: var(--primary);
    }

    &__slider {
    }

    &__slider-wrapper {
    }

    &__slide {
      margin-bottom: 8px;
    }

    &__bottom {
    }

    &__catalog-button {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 10px 12px;
      border-radius: 8px;
      background-color: var(--primary);

      font-weight: 800;
      font-style: italic;
      font-size: 14px;
      text-transform: uppercase;
      color: var(--white);
    }
  }
  .container {
  }
  .swiper {
    overflow: visible;
  }
  .swiper-fix {
  }
  .swiper-wrapper {
  }
  .swiper-slide {
  }
  .slide-hits {
    border: 1px solid var(--light-2);
    padding: 8px 0;
    width: 117px;

    &:first-child {
      border-top-left-radius: 12px;
      border-bottom-left-radius: 12px;
    }

    &:last-child {
      border-top-right-radius: 12px;
      border-bottom-right-radius: 12px;
    }

    &__image {
      position: relative;
      aspect-ratio: 117 / 144;
      margin-bottom: 6px;

      img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }

    &__content {
      padding: 0 8px;
    }

    &__country {
      font-weight: 800;
      font-style: italic;
      font-size: 12px;
      text-align: center;
      text-transform: uppercase;
      color: var(--primary);
    }

    &__title {
      font-weight: 800;
      font-style: italic;
      font-size: 12px;
      text-align: center;
      text-transform: uppercase;
      color: var(--secondary);

      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;

      margin-bottom: 2px;
    }

    &__description {
      font-weight: 600;
      font-style: italic;
      font-size: 10px;
      text-transform: uppercase;
      color: var(--primary);
      text-align: center;

      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;

      margin-bottom: 6px;
    }

    &__price {
      padding: 8px 16px;
      border-radius: 8px;
      border: 1px solid var(--primary);
      width: 100%;

      font-weight: 900;
      font-style: italic;
      font-size: 11px;
      text-transform: uppercase;
      color: var(--primary);

      span {
        font-size: 12px;
      }
    }
  }
</style>

<script>
  import Swiper from 'swiper';

  document.querySelectorAll<HTMLDivElement>("[data-component='hits']").forEach((wrapper) => {
    const slider = wrapper.querySelector<HTMLDivElement>('.swiper');
    if (slider) {
      new Swiper(slider, {
        loop: true,
        slidesPerView: 'auto',
      });
    }
  });
</script>
