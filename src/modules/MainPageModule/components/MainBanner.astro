---
import 'swiper/css';
import 'swiper/css/pagination';

export interface MainBannerSlide {
  image: string;
  title: string;
  subtitle: string;
}

interface Props {
  slides: MainBannerSlide[];
}

const { slides } = Astro.props;
---

<script>
  import Swiper from 'swiper';
  import { Pagination } from 'swiper/modules';

  const swiper = new Swiper('.swiper', {
    loop: true,
    spaceBetween: 8,
    pagination: { el: '.swiper-pagination' },
    modules: [Pagination],
  });
</script>

<div class='swiper swiper-fix'>
  <div class='swiper-wrapper'>
    {
      slides.map(({ title, image, subtitle }) => (
        <div class='swiper-slide banner-slide'>
          <div class='banner-slide__image'>
            <img src={image} alt='image' />
            <div class='banner-slide__description'>
              <h2 class='banner-slide__title'>{title}</h2>
              <p class='banner-slide__subtitle' />
              <a href='#' class='banner-slide__button'>
                Перейти в каталог
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
  <div class='swiper-pagination'></div>
</div>

<style>
  .swiper {
    margin: 0 -8px;
  }

  .banner-slide {
    width: 100%;
    aspect-ratio: 359 / 192;
    border-radius: 12px;
    overflow: hidden;
  }

  .banner-slide__image {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .banner-slide__image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .banner-slide__description {
    position: relative;
    z-index: 10;
    color: var(--white);
  }

  .banner-slide__title {
    font-weight: 800;
    font-size: 16px;
    text-transform: uppercase;
  }

  .banner-slide__subtitle {
    font-weight: 500;
    font-size: 10px;
  }

  .banner-slide__button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6px 8px;
    border-radius: 4px;
    background-color: var(--primary);
    font-weight: 800;
    font-size: 12px;
    text-transform: uppercase;
  }
</style>
