---
import BackgroundGradient from '@/components/shared/BackgroundGradient.astro';
import { Picture } from 'astro:assets';

export interface PreviewHitProps {
  backgroundImage: Promise<{ default: ImageMetadata }>;
  description?: string;
}

type Props = PreviewHitProps;

const { backgroundImage, description } = Astro.props;
---

<div class='preview-hit'>
  <div class='preview-hit__background'>
    <Picture inferSize layout='constrained' formats={['avif', 'webp']} src={backgroundImage} alt='image' />
    <BackgroundGradient class='preview-hit__gradient' />
  </div>
  <div class='preview-hit__content'>
    {description && <p class='preview-hit__description'>{description}</p>}
    <slot />
  </div>
</div>

<style lang='scss'>
  .preview-hit {
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    width: 100%;
    aspect-ratio: 359 / 524;
    border-radius: 12px;
    overflow: hidden;

    @include media('xl') {
      border-radius: 16px;
    }

    &__background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;

      img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__gradient {
      @include media('lg') {
        display: none;
      }
    }

    &__content {
      position: relative;
      z-index: 10;
      padding: 16px 8px;
    }

    &__description {
      font-weight: 500;
      font-style: italic;
      font-size: 14px;
      line-height: 14px;
      text-align: center;
      margin-bottom: 12px;
      color: rgba(255, 255, 255, 0.48);

      @include media('md') {
        margin-bottom: 16px;
      }

      @include media('lg') {
        display: none;
      }
    }
  }
</style>
