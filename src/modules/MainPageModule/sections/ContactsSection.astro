---
import BackgroundGradient from '@/components/shared/BackgroundGradient.astro';
import { Icon } from 'astro-icon/components';
import { Picture } from 'astro:assets';

const previewHitsimages = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/img/home/preview-hits/*.{jpeg,jpg,png,gif}'
);

const image = previewHitsimages['/src/assets/img/home/preview-hits/background.png']();

interface Contact {
  name: string;
  phone: string;
  email: string;
}

const contacts: Contact[] = [
  { name: 'Татьяна', phone: '+7-906-512-25-55', email: 'mta37@stayer-tex.ru' },
  { name: 'Татьяна', phone: '+7-906-512-25-55', email: 'mta37@stayer-tex.ru' },
];
---

<section class='contacts'>
  <div class='contacts__container container'>
    <div class='contacts__wrapper'>
      <div class='contacts__background'>
        <Picture inferSize layout='constrained' formats={['avif', 'webp']} src={image} alt='image' />
        <BackgroundGradient />
      </div>
      <div class='contacts__content'>
        {
          contacts.map(({ name, phone, email }) => (
            <div class='contacts__contact contact'>
              <p class='contact__name'>{name}</p>
              <div class='contact__button contact__button_top'>
                <div class='contact__button-inner'>
                  <a href={`tel:${phone}`} class='contact__phone'>
                    {phone}
                  </a>
                  <div class='contact__icons'>
                    <a href='#' class='contact__icon'>
                      <Icon name='whatsapp' />
                    </a>
                    <a href='#' class='contact__icon'>
                      <Icon name='telegram' />
                    </a>
                  </div>
                </div>
              </div>
              <a href={`mailto:${email}`} class='contact__button contact__button_bottom'>
                {email}
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style lang='scss'>
  .contacts {
    margin-bottom: 32px;

    @include media('lg') {
      display: none;
    }

    &__container {
    }

    &__wrapper {
      position: relative;
      width: 100%;
      aspect-ratio: 359 / 524;
      border-radius: 12px;
      overflow: hidden;
      padding: 8px;

      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

    &__background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;

      img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__content {
      position: relative;
      z-index: 10;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4px;
    }

    &__contact {
    }
  }

  .contact {
    &__name {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 4px;

      font-weight: 900;
      font-style: italic;
      font-size: 12px;
      text-transform: uppercase;
      color: var(--primary);

      margin-bottom: 6px;

      &::before,
      &::after {
        content: '';
        width: 100%;
        height: 1px;
        background-color: var(--primary);
      }
    }

    &__button {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 10px 12px;
      background-color: transparent;
      border: 1px solid var(--primary);
      border-radius: 8px;

      font-weight: 800;
      font-size: 16px;
      text-transform: uppercase;
      color: var(--white);

      &_top {
        margin-bottom: 4px;
      }

      &_bottom {
        font-size: 14px;
      }
    }

    &__button-inner {
      display: flex;
      flex-direction: column;
      gap: 4px;
      align-items: center;
    }

    &__phone {
    }

    &__icons {
      display: flex;
      align-items: center;
      gap: 4px;
    }

    &__icon {
      color: var(--primary);
    }
  }
</style>
