---
import Layout from '@/layouts/Layout.astro';
import type { ICardProps } from './components/Card.astro';
import Card from './components/Card.astro';
import SliderSection from '@/components/shared/SliderSection.astro';
import Pagination from '@/components/ui/Pagination.astro';

const hitsImgs = import.meta.glob<{ default: ImageMetadata }>('/src/assets/img/inventory/*.{jpeg,jpg,png,gif}');

const cards: ICardProps[] = [
  {
    image: hitsImgs['/src/assets/img/inventory/card.png'](),
    title: 'Финляндия',
    subtitle: 'Костюм Горка Зима Финл. ПК...',
    description: [
      'Флис, 100%ПЭ, Зима, Нешуршащая, Непромокаемая, Дышащая...',
      'Удобный костюм для охоты, рыбалки и активного отдыха в зимний период года',
    ],
    price1: '13 000',
    price2: '5 200',
  },
  {
    image: hitsImgs['/src/assets/img/inventory/card.png'](),
    title: 'Финляндия',
    subtitle: 'Костюм Горка Зима Финл. ПК...',
    description: [
      'Флис, 100%ПЭ, Зима, Нешуршащая, Непромокаемая, Дышащая...',
      'Удобный костюм для охоты, рыбалки и активного отдыха в зимний период года',
    ],
    price1: '13 000',
    price2: '5 200',
  },
  {
    image: hitsImgs['/src/assets/img/inventory/card.png'](),
    title: 'Финляндия',
    subtitle: 'Костюм Горка Зима Финл. ПК...',
    description: [
      'Флис, 100%ПЭ, Зима, Нешуршащая, Непромокаемая, Дышащая...',
      'Удобный костюм для охоты, рыбалки и активного отдыха в зимний период года',
    ],
    price1: '13 000',
    price2: '5 200',
  },
];
---

<Layout>
  <div class='srp'>
    <div class='srp__container container'>
      <div class='srp__wrapper'>
        <div class='srp__card-list'>
          {cards.map((card) => <Card {...card} />)}
        </div>
        <div class='srp__section-sep'>
          <SliderSection title='Также покупают' description='Текст комментария от нейросети для расшифровки' />
        </div>
        <div class='srp__card-list'>
          {cards.map((card) => <Card {...card} />)}
        </div>
        <div class='srp__pagination'>
          <Pagination />
        </div>
        <div class='srp__description'>
          <h3 class='srp__description-title'>одбор костюма для охоты, рыбалки, туризма и работы</h3>
          <p class='srp__description-text'>
            Если вы ищете надёжный костюм для зимы, межсезонья или просто активного отдыха — вы попали по адресу. У нас
            есть утеплённые комплекты на мороз, влагостойкие костюмы на сырую осень, а также дышащие модели для
            активного движения.
          </p>
          <p class='srp__description-text'>
            Мы поможем подобрать вариант под ваш запрос — будь то охота, рыбалка, туризм или работа на открытом воздухе.
            Всё удобно отсортировано, но если нужны рекомендации — напишите, я подскажу, что лучше подойдёт именно вам.
          </p>
        </div>
        <SliderSection title='Просмотренные' description='Текст комментария от нейросети для расшифровки' />
      </div>
    </div>
  </div>
</Layout>

<style lang='scss'>
  .srp {
    padding: 14px 0 40px;

    &__container {
    }

    &__wrapper {
    }

    &__card-list {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    &__section-sep {
      padding: 26px 0 36px;
    }

    &__pagination {
      border-top: 1px solid var(--light-2);
      padding-top: 8px;
      margin: 20px 0 30px;
    }

    &__description {
      padding-bottom: 12px;
      border-bottom: 1px solid var(--light-2);
      margin-bottom: 48px;
    }

    &__description-title {
      font-weight: 800;
      font-size: 18px;
      line-height: 20px;
      text-transform: uppercase;
      color: var(--secondary);
      padding-right: 48px;
    }

    &__description-text {
      padding-left: 8px;

      font-family: var(--font-secondary);
      font-weight: 500;
      font-size: 14px;
      line-height: 16px;
      color: var(--secondary);

      &:not(:last-child) {
        margin-bottom: 24px;
      }
    }
  }
  .container {
  }
</style>
