---
export interface ICard {
  title: string;
  href: string;
  cols?: number;
}

type Props = ICard;

const { title, href, cols = 1 } = Astro.props;
---

<div class='card'>
  <div class='card__content'>
    <h3 class='card__title'>{title}</h3>
    <a href={href} class='card__link'>узнать подробнее</a>
  </div>
</div>

<style lang='scss' define:vars={{ cols }}>
  .card {
    width: 100%;
    min-height: 256px;
    background-color: transparent;
    border-radius: 8px;
    @include border(1px, var(--light-2));
    grid-column: span var(--cols);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 16px;

    @include media('xl') {
      min-height: 480px;
    }

    &__content {
      text-align: center;
    }

    &__title {
      font-weight: 900;
      font-style: italic;
      font-size: 20px;
      text-transform: uppercase;
      color: var(--secondary);

      @include media('xl') {
        font-size: 36px;
      }
    }

    &__link {
      font-weight: 900;
      font-style: italic;
      font-size: 12px;
      line-height: 18px;
      text-transform: uppercase;
      color: var(--primary);
      text-decoration: underline;

      @include media('xl') {
        font-size: 16px;
      }
    }
  }
</style>
